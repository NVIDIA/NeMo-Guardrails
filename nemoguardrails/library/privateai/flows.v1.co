# INPUT RAILS

define subflow detect pii on input
  """Check if the user input has PII."""
  $has_pii = execute detect_private_data(source="input", text=$user_message)

  if $has_pii
    bot inform answer unknown
    stop


# INPUT RAILS

define subflow detect pii on output
  """Check if the bot output has PII."""
  $has_pii = execute detect_private_data(source="output", text=$bot_message)

  if $has_pii
    bot inform answer unknown
    stop
